---
import "../styles/global.css"; 
const { title = "Alberto van Oldenbarneveld" } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Basic SEO -->
    <title>{title}</title>
    <meta name="description" content="Software, clarity and systems thinking – practical essays and projects from developer Alberto van Oldenbarneveld.">
    <link rel="canonical" href="https://albertovan.com">

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />

    <!-- Open Graph / Social Preview -->
    <meta property="og:title" content="Alberto van Oldenbarneveld – Software Developer & Systems Thinker">
    <meta property="og:description" content="Software, clarity and systems thinking – practical essays and projects from developer Alberto van Oldenbarneveld.">
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://albertovan.com">
    <meta property="og:image" content="/og-image.jpg">

    <!-- Twitter Preview -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:title" content="Alberto van Oldenbarneveld – Software Developer & Systems Thinker">
    <meta name="twitter:description" content="Software, clarity and systems thinking – practical essays and projects from developer Alberto van Oldenbarneveld.">
    <meta name="twitter:image" content="/og-image.jpg">
  </head>
  <body>
    <header>
      <h2>
        <a href="/" style="color: inherit; text-decoration: none;">
          Alberto van Oldenbarneveld
        </a>
      </h2>
      <nav>
        <a href="/about">About me</a>
        <a href="/blog">Blog</a>
        <a href="/contact">Contact</a>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer>
      <p>© {new Date().getFullYear()} Alberto van Oldenbarneveld. All rights reserved.</p>
    </footer>
  </body>
</html>
