---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from 'astro:content';

const posts = await getCollection('blog', ({ data }) => !data.draft);
posts.sort((a, b) => new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime());
---

<Layout title="Blog">
  <main class="max-w-4xl mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-6">Blog</h1>

    <div class="blog-intro">
      <p>
        This blog is where I share the way I think through the things I care about.
        I like to dive deep, follow the details, and build a clear structure around them.
        Writing here lets me make that process visible â€” the choices, the patterns, and
        the passion that drive me when I get into something fully.
      </p>
    </div>

    {posts.length === 0 ? (
      <p class="text-lg text-gray-600">No posts yet. Check back soon!</p>
    ) : (
      <div class="space-y-8">
        {posts.map((post) => (
          <article class="border-b border-gray-200 pb-8">
            <h2 class="text-2xl font-semibold mb-2">
              <a href={`/blog/${post.slug}`} class="hover:text-blue-600 transition-colors">
                {post.data.title}
              </a>
            </h2>
            <p class="text-gray-600 mb-3">{post.data.description}</p>
            <div class="flex items-center text-sm text-gray-500">
              <time datetime={post.data.pubDate.toISOString()}>
                {post.data.pubDate.toLocaleDateString('en-US', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric'
                })}
              </time>
            </div>
          </article>
        ))}
      </div>
    )}
  </main>
</Layout>
